#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	double a;
	double b;

	cout << "This will calculate the hypotenuse of the right triangle. \n";
	cout << "Please enter the first value of side a: ";
		cin >> a;
	cout << "\nPlease enter the second value, for side b: "
		cin >> b;

	double c = sqrt((a * a) + (b * b));

	cout << "The hypotenuse is " << c << "!";

	return 0;

}
